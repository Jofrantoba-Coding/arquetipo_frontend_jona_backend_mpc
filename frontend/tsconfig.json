{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,                      // Deshabilitar archivos JavaScript
    "skipLibCheck": false,                 // Verificar tipos de bibliotecas
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,                 // Prohibir tipos implícitos any
    "strictNullChecks": true,              // Verificación estricta de null
    "strictFunctionTypes": true,           // Verificación estricta de tipos de funciones
    "strictPropertyInitialization": true,  // Verificación estricta de inicialización de propiedades
    "noUnusedLocals": true,                // Prohibir variables locales no usadas
    "noUnusedParameters": true,            // Prohibir parámetros no usados
    "noImplicitReturns": true,             // Prohibir funciones sin retorno explícito
    "noImplicitThis": true,                // Prohibir this implícito
    "alwaysStrict": true                   // Habilitar modo estricto siempre
  },
  "include": [
    "src"
  ]
}
